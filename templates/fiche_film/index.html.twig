									<div class="entity-play">
										<a class="action-icon-theme action-icon-bordered rounded-circle" href="{{film.bandeAnnonce}}" data-magnific-popup="iframe">
											<span class="icon-content">
												<i class="fas fa-play"></i>
											</span>
										</a>
									</div>
								{% else %}
									<span>Pas de bande annonce disponible</span>
								{% endif %}
